<div class="container">

	<div class="row">
		<div class="col-sm-offset-3 col-sm-6">
			<%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <span class="text-center"><img src="<%=asset_path 'name.JPG'%>" alt="Blind Circuit" class="img-responsive" style="height: 80px; margin: auto;"></span>
			<br />
		</div>
	</div>

			<div class="row">
	      <div class="col-sm-offset-4 col-sm-4">
					<div class="form-group">
						<%= f.input_field :email, required: false, autofocus: true, placeholder: "이메일" , class: 'form-control password optional'%>
					</div> <!--form-group end -->
				</div> <!--col-sm-6 end -->
      </div> <!--row end -->

      <div class="row">
		  	<div class="col-sm-offset-4 col-sm-4">
				  <div class="form-group">
				    <%= f.input_field :password, required: false, placeholder: "비밀번호", class: 'form-control password optional' %>
				  </div> <!--form-group end -->
			  </div> <!--col-sm-6 end-->
      </div> <!--row end -->
            <!-- <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %> -->

	<div class="row">
		<div class="col-sm-offset-4 col-sm-4">
			<div class="form-group">
        <div class="form-actions" >
          <div class="text-center">
						<%= f.button :submit, "로그인", class: 'button border dark large btn-lg btn-block' %>
					</div>
        </div> <!--form-action end -->
			</div> <!--form-group end -->
		</div> <!--col-sm-6 end-->
	</div> <!--row end -->


<%= render "users/shared/links" %>
	<% end %>
