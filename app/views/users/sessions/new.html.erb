<%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>

		<section class="section white">
			<div class="inner">
				<div class="container">

							<div class="contact">
                <div class="form-inputs">
                  <div class="row justify-content-center">
        						<div class="col-sm-6">
								      <h4>Log in</h4>
                    </div>
                  </div>

					<div class="row">
			      <div class="col-sm-5 align-self-center">
							<div class="form-group">
								<%= f.input :email, required: false, autofocus: true, placeholder: "Email*" %>
							</div> <!--form-group end -->
						</div> <!--col-sm-6 end -->
          </div> <!--row end -->

          <div class="row">
				  	<div class="col-sm-5">
						  <div class="form-group">
						    <%= f.input :password, required: false, placeholder: "Password*" %>
						  </div> <!--form-group end -->
					  </div> <!--col-sm-6 end-->
          </div> <!--row end -->

                <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
              </div> <!--form input end-->

									<div class="form-group">
                    <div class="form-actions">
                      <%= f.button :submit, "Log in" %>
                    </div> <!--form-action end -->
                    <% end %>
                    <%= render "users/shared/links" %>
									</div> <!--form-group end -->
							</div> <!-- end .contact -->


              <div class="row">
              <div class="col-sm-4">
                <div class="contact-details">
                  <div class="item">
                    <div class="icon"><i class="ion-ios-location-outline"></i></div>
                    <div class="content">
                      <h6>회원가입</h6>
                    </div> <!-- end .content -->
                  </div> <!-- end .item -->
                  <div class="item">
                    <div class="icon"><i class="ion-ios-telephone-outline"></i></div>
                    <div class="content">
                      <h6>아이디 찾기</h6>
                    </div> <!-- end .content -->
                  </div> <!-- end .item -->
                  <div class="item">
                    <div class="icon"><i class="ion-ios-email-outline"></i></div>
                  <div class="content">
                    <h6>비밀번호 찾기</h6>
                  </div> <!-- end .content -->
                </div> <!-- end .item -->
              </div> <!-- end .contact-details -->
            </div> <!-- end .col-sm-4 -->
          </div> <!-- end row -->
        </div> <!-- end container -->
      </div> <!-- end inner -->
		</section> <!-- end .section -->

		<footer class="footer">
			<div class="bottom">
				<span class="copyright">Copyright 2018. All Rights Reserved by Blind Circuit.</span>
			</div> <!-- end .bottom -->
		</footer> <!-- end .footer -->
