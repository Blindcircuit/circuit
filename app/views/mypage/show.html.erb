<div class="container">
  <h3 style="color: #000000">이전 기록</h3>
  <table class="table">

    <thead style="background-color: #2e3335; color: white">
      <tr>
        <!-- 최신입력순서대로 상단에 배치 -->
        <th scope="col" class="text-center">Index</th>
        <th scope="col" class="text-center">TRACK</th>
        <th scope="col" class="text-center">CAR</th>
        <th scope="col" class="text-center">TIME(1Lap)</th>
        <th scope="col" class="text-center">주행날짜</th>
        <!-- 디자인적으로 그림으로 변경 -->
        <th scope="col" class="text-center">트랙상태</th>

      </tr>
    </thead>
    <tbody>
      <% @myrecords.each_with_index do |record,index| %>
      <tr>
        <% if params[:page] %>
          <th scope="row" class="text-center"><%=@index - index-1 -(params[:page].to_i-1)*10%></th>
        <% else %>
          <th scope="row" class="text-center"><%=@index - index-1 %></th>
        <% end %>
        <td class="text-center"><%=record.track.trackname%></td>
        <td class="text-center"><%=record.car.model%></td>
        <td class="text-center"><%=record.laptime.to_s.slice(0)%>"&nbsp<%=record.laptime.to_s.slice(1..2)%>'&nbsp<%=record.laptime.to_s.slice(3..4)%></td>
        <td class="text-center"><%=record.recorddate%></td>
        <td class="text-center"><%=record.track_status%></td>
      </tr>
      <% end %>
    </tbody>
  </table>
  <div class="text-center">
  <%= paginate @myrecords %>
  </div>
  <br />
</div>

